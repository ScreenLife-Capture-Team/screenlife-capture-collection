{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "target": "es6",
    "jsx": "react",
    "module": "esnext",
    "rootDir": "src",
    "moduleResolution": "node10",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}